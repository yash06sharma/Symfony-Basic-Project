{% extends 'CRUD_TEMP/layout.html.twig' %}


{% block title %}CRUD Operation
{% endblock %}


{% block body %}
	<div class="row">
		<h4 class="alert alert-primary text-center">Crud Form</h4>
	</div>

	{{ form_start(form, {'action': path('submit_form'), 'method': 'POST'}) }}
	{{ form_widget(form) }}
	{{ form_end(form) }}

	{% if not form.vars.valid %}
		<div class="alert alert-error">
			{{ form_errors(form) }}
		</div>
	{% endif %}
	<div class="row">
		<div class="col-sm-6 col-md-6 col-xl-6">

			<form action="{{ path('submit_form') }}" method="POST" enctype="multipart/form-data">

				<div class="mb-3 row">
					<label for="name" class="col-sm-2 col-form-label">Name</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="name" name="name" value="">
					</div>
				</div>

				<div class="mb-3 row">
					<label for="name" class="col-sm-2 col-form-label">Gender</label>
					<div class="col-sm-10">
						<div class="form-check">

							<input class="form-check-input" type="radio" name="age" id="age1" value="Male">
							<label class="form-check-label" for="age">
								Male
							</label>
						</div>

						<div class="form-check">
							<input class="form-check-input" type="radio" name="age" id="age2" value="Female" checked>
							<label class="form-check-label" for="age2">
								Female
							</label>
						</div>

					</div>

					<div class="mb-3 row">
						<label for="mobile" class="col-sm-2 col-form-label">Mobile</label>
						<div class="col-sm-10">
							<input type="number" class="form-control" name="mobile" id="mobile" value="">
						</div>
					</div>

					<div class="mb-3 row">
						<label for="mobile" class="col-sm-2 col-form-label">Course</label>

						<div class="col-sm-10">
							<div class="form-check">
								<input class="form-check-input" type="checkbox" name="cource[]" value="PHP" id="cource1">
								<label class="form-check-label" for="flexCheckDefault">PHP</label>
							</div>
							<div class="form-check">
								<input class="form-check-input" type="checkbox" name="cource[]" value="Laravel" id="cource2">
								<label class="form-check-label" for="flexCheckChecked">Laravel</label>
							</div>
						</div>
					</div>

					<select class="form-select" aria-label="Default select example" name="city">
						<option selected disabled>-Select-</option>
						<option value="MP">MP</option>
						<option value="UP">UP</option>
						<option value="Gujrat">Gujrat</option>
					</select>

					<div class="mb-3">
						<label for="image" class="form-label">Upload</label>
						<input class="form-control" type="file" id="image1" name="image">
					</div>

					<input
					type="submit" class="btn btn-primary" value="Submit"/>
				{# Submit
													</input> #}


				</form>
			</div>


			<div class="col-sm-6 col-md-6 col-xl-6 text-center">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">#ID</th>
							<th scope="col">Name</th>
							<th scope="col">Address</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<th scope="row">1</th>
							<td>Yash</td>
							<td>Ujjain</td>
							<td>
								<button class="btn btn-secondary btn-sm">Edit</button>&nbsp;
								<button class="btn btn-warning btn-sm">Delete</button>

							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>


	{% endblock %}
